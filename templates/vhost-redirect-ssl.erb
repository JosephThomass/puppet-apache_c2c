# file managed by puppet
<VirtualHost<% ports.each do |port| -%> <%= port %><% end -%>>
  ServerName <%= name %>

<% aliases.each do |serveralias| -%>
  ServerAlias <%= serveralias %>
<% end -%>

  RewriteEngine On
  RewriteRule /(.*) https://%{HTTP_HOST}<%= ssl_port[0].sub('*','') %>/$1 [R=302]

  ServerSignature Off
</VirtualHost>
